{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "target",
    "node_modules",
    "dist",
    "config",
    "postcss.config.js",
    "src/setupTests.ts",
    "**/*.spec.ts"
  ]
}
